<% include ../partials/header %>

<div class="container" >
    <header class="jumbotron">
        <div class="container">
            <h1 id="centeredText">Озброй свій розум грамотною мовою!</h1>
            <em><p class="pull-right">Уроки солов'їною про солов'їну.</p></em>
            <p>
              <a class="btn btn-primary btn-large" href="/lessons/new">Додай Урок!</a>
            </p>
        </div>
    </header>
    
    <div class="row text-center" style="display:flex; flex-wrap: wrap;">
        <% lessons.forEach(function(lesson){ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                    <div class="caption">
                        <h4> <%= lesson.name %></h4>
                    </div>
                    <p>
                        <a href="/lessons/<%= lesson._id %>" class="btn btn-primary">Вперед!</a>
                    </p>
                </div>
            </div>
        <% });  %>
    </div>
</div>

<% include ../partials/footer %>